@using GameStoreMVC.Models;
@model IEnumerable<Game>;
<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Game" asp-action="Create">Create Slider</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>



    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>GameId</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tfoot>
                    @foreach (Game item in @Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Title</th>
                            <th>@item.Description</th>
                            <td>@item.Price</td>>
                            <td>@item.GameId</td>>
                            <td><img src="~/Uploads/@item.ImageUrl"></td>>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-primary" asp-controller="Game" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin">
                                        <i class="fa-solid fa-pen-nib"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-controller="Game" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">
                                        <i class="fa-solid fa-delete-left"></i>
                                    </a>
                                    <a class="btn btn-secondary" asp-controller="Game" asp-action="Detail" asp-route-id="@item.Id" asp-area="Admin">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }

                </tfoot>


            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
