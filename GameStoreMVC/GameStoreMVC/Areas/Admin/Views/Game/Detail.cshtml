@using GameStoreMVC.Models;
@model Game;
<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Game" asp-action="Create">Create Slider</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>



    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>GameId</th>
                        <th>Image</th>
                        <th>IsDeleted</th>
                    </tr>
                </thead>
                <tfoot>
                    
                        <tr>
                            <th>@Model.Id</th>
                            <th>@Model.Title</th>
                            <th>@Model.Description</th>
                            <td>@Model.Price</td>>
                            <td>@Model.GameId</td>>
                            <td>@Model.ImageUrl</td>>
                            <td>@Model.IsDeleted</td>>
                             <a class="btn btn-secondary" asp-controller="Game" asp-action="Index" asp-route-id="@Model.Id" asp-area="Admin">
                                <i class="fa-solid fa-circle-info"></i>
                            </a> 
                        </tr>
                    

                </tfoot>


            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
